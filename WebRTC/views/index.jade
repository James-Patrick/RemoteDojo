extends layout

block content
    h1#title Demo Start Page
    form(onsubmit='return popoutMentor()')
      h2 Mentor Log-in
      br
      | Name: 
      input#mentorName(type='text', name='user')
      br
      br
      input(type='submit', value='Enter')
    br
    br
    br
    form(onsubmit='return popoutNinja()')
      h2 Ninja Entry
      br
      |	Name: 
      input#ninjaName(type='text', name='user')
      br
      br
      input(type='submit', value='Enter')
