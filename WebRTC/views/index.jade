      var url = "Mentor?user=" + $("#mentorName").val();
      var w = window.open(url, "_blank", "status=no, menubar=no, titlebar=yes, toolbar=no, location=no, width=300, height=620, scrollbars=yes", false);
      return w?false:true;
      }
      function popoutNinja() {
      var url = "Ninja?user=" + $("#ninjaName").val();
      var w = window.open(url, "_blank", "status=no, menubar=no, titlebar=yes, toolbar=no, location=no, width=300, height=620, scrollbars=yes", false);
      return w?false:true;
      }
